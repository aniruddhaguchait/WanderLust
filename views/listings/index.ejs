<% layout('/layouts/boilerplate')%>
<body>
    <style>
        #filters {
            margin-top: 1rem;
            display: flex;
            flex-wrap: wrap;
        }
        .filter{
            text-align: center;
            margin-left: 2rem;
            opacity: 0.8;
        }
        .filter:hover{
            opacity:1;
            cursor:pointer;
        }
        .filter p{
            font-size: 0.8rem;
        }
    </style>
    <div id="filters">
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Hills</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-umbrella-beach"></i></div>
            <p>Beach</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
        </div>
        <div class="filter">
            <div><i class="fa-brands fa-bluesky"></i></div>
            <p>Nature</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-cable-car"></i></div>
            <p>OMG!</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-snowflake"></i></div>
            <p>Arctic</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-hotel"></i></div>
            <p>Hotels</p>
        </div>
        <div class="filter">
            <div><i class="fa-brands fa-fort-awesome-alt"></i></div>
            <p>Forts</p>
        </div>
        <div class="filter">
            <div><i class="fa-brands fa-periscope"></i></div>
            <p>Favorites</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-tree"></i></div>
            <p>Jungle</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-archway"></i></div>
            <p>Cities</p>
        </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xs-1 mt-3">
        <%for(let listing of allListings){%>
            <a href="/listings/<%= listing.id %>" class="listing-link">
                <div class="card col listing-card" >
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="<%=listing.title%>" style="height: 20rem;">
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b> <br>
                            &#x20B9;<%= listing.price.toLocaleString("en-IN")%> / night
                        </p>
                    </div>
                    <div class="card-img-overlay">
                        <!-- <h5 class="card-title">Guest favourite</h5> -->
                    </div>
                </div>          
            </a>
        <%}%>
    </div>
</body>