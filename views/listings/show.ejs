<% layout('/layouts/boilerplate')%>
<body>
    <div class="row">
        <div class="col-8  offset-3">
            <h3>Listing Details</h3>
        </div>
        <div class="card col-6 offset-3 show-card">
            <img src="<%= listing.image %>" class="card-img-top show-img" alt="<%=listing.title%>">
            <div class="card-body">
                <p class="card-text">
                    <b><%= listing.title %></b>
                    <br>
                    <%= listing.description %>
                    <br>
                    &#x20B9;<%= listing.price.toLocaleString("en-IN")%>
                    <br>
                    <%= listing.location %>
                    <br>
                    <%= listing.country %>
                </p>
            </div>
        </div>
        <br>
        <div class="btns">
                <a href="/listings/<%= listing.id %>/edit" class="btn btn-dark col-1 offset-3">Edit Listing</a>
            <form action="/listings/<%=listing.id%>?_method=delete" method="post">
                <button class="btn btn-dark offset-5 delete-btn">Delete</button>
            </form>   
        </div>
    </div>
